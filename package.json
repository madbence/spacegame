{
  "name": "spacegame",
  "version": "0.0.0",
  "description": "Multiplayer space-shooter game",
  "main": "app.js",
  "scripts": {
    "test": "mocha",
    "start": "babel-node src/server/app",
    "start:dev": "npm run watch:js & npm run watch:css & npm run watch:app & wait",
    "build:js": "browserify -o assets/bundle.js -t [ babelify --optional runtime ] src/client/main.js",
    "build:css": "stylus -o assets/style.css styles/index.styl",
    "lint": "eslint 'src/**/*.js'",
    "watch:app": "nodemon -w src/server -q --exec babel-node src/server/app",
    "watch:js": "watchify -o assets/bundle.js -t [ babelify --optional runtime ] src/client/main.js",
    "watch:css": "stylus -w -o assets/style.css styles/index.styl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madbence/spacegame.git"
  },
  "author": "Bence DÃ¡nyi <bence@danyi.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madbence/spacegame/issues"
  },
  "homepage": "https://github.com/madbence/spacegame#readme",
  "dependencies": {
    "babel": "^5.8.23",
    "koa": "^1.0.0",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.2",
    "ws": "^0.8.0"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.24",
    "babelify": "^6.3.0",
    "browserify": "^11.1.0",
    "eslint": "^1.5.1",
    "eslint-plugin-react": "^3.4.2",
    "flow-bin": "^0.16.0",
    "nodemon": "^1.7.0",
    "react": "^0.13.3",
    "react-redux": "^2.1.2",
    "redux": "^3.0.0",
    "stylus": "^0.52.4",
    "uuid": "^2.0.1",
    "watchify": "^3.4.0"
  }
}
