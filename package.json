{
  "name": "spacegame",
  "version": "0.0.4",
  "description": "Multiplayer space-shooter game",
  "main": "app.js",
  "scripts": {
    "test": "ava test/**/*.test.js",
    "start": "babel-node src/server/app",
    "flow": "flow",
    "flow:single": "flow check",
    "flow:stop": "flow stop",
    "flow:init": "flow init",
    "lint": "eslint 'src/**/*.js'",
    "coverage": "babel-node node_modules/.bin/isparta cover ava -- test/**/*.test.js",
    "build": "npm run build:js & npm run build:css & wait",
    "build:prod": "npm run build:js:prod & npm run build:css:prod & wait",
    "build:js": "browserify -o assets/bundle.js -t [ babelify --optional runtime ] src/client/app.js",
    "build:js:prod": "NODE_ENV=production browserify -d -o assets/bundle.inlined.js -t [ babelify --optional runtime ] src/client/app.js && cat assets/bundle.inlined.js | exorcist assets/bundle.js.map -b . > assets/bundle.js && uglifyjs --source-map-root . --in-source-map assets/bundle.js.map --source-map assets/bundle.min.js.map --source-map-url bundle.js.map -o assets/bundle.min.js --compress --mangle -- assets/bundle.js && mv assets/bundle.min.js assets/bundle.js && mv assets/bundle.min.js.map assets/bundle.js.map",
    "build:css": "stylus -o assets/style.css styles/index.styl",
    "build:css:prod": "stylus -o assets/style.css styles/index.styl && cleancss -o assets/style.css assets/style.css",
    "watch": "npm run watch:js & npm run watch:css & npm run watch:app & wait",
    "watch:app": "nodemon -w src --exec babel-node src/server/app.js",
    "watch:js": "watchify -v -d -o assets/bundle.js -t [ babelify --optional runtime ] src/client/app.js",
    "watch:css": "stylus -w -o assets/style.css styles/index.styl",
    "watch:test": "nodemon test/**/*.test.js --exec ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madbence/spacegame.git"
  },
  "author": "Bence DÃ¡nyi <bence@danyi.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/madbence/spacegame/issues"
  },
  "homepage": "https://github.com/madbence/spacegame#readme",
  "dependencies": {
    "babel": "^5.8.29",
    "dotenv": "^1.2.0",
    "jsonwebtoken": "^5.4.1",
    "koa": "^1.1.1",
    "koa-compose": "^2.3.0",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.2",
    "uuid": "^2.0.1",
    "ws": "^0.8.0"
  },
  "devDependencies": {
    "ava": "^0.2.0",
    "babel-eslint": "^4.1.3",
    "babel-runtime": "^5.8.29",
    "babelify": "^6.4.0",
    "browserify": "^12.0.0",
    "clean-css": "^3.4.8",
    "eslint": "^1.8.0",
    "eslint-plugin-react": "^3.6.3",
    "exorcist": "^0.4.0",
    "flow-bin": "^0.18.1",
    "isparta": "^3.1.0",
    "istanbul": "gotwarlost/istanbul#source-map",
    "nodemon": "^1.8.1",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "stylus": "^0.52.4",
    "uglify-js": "^2.6.0",
    "watchify": "^3.5.0"
  }
}
